<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="25dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_web"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri|textWebEditText"
        android:selectAllOnFocus="true"
        android:text="@string/website" />

    <Button
        android:id="@+id/btn_web"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/web" />

    <EditText
        android:id="@+id/et_geo"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri|textAutoCorrect|textAutoComplete"
        android:selectAllOnFocus="true"
        android:text="@string/geo" />

    <Button
        android:id="@+id/btn_geo"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Location" />


    <EditText
        android:id="@+id/et_share"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage|textAutoCorrect|textAutoComplete|textImeMultiLine"
        android:selectAllOnFocus="true"
        android:text="@string/text_to_share" />

    <Button
        android:id="@+id/btn_share"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share" />

</LinearLayout>